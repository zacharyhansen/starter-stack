generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema", "prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["auth", "foundation", "public"]
}

enum property_type {
  commercial
  residential

  @@schema("public")
}

enum building_type {
  condo
  multi_family
  single_family

  @@schema("public")
}

enum environment_type {
  production
  uat

  @@schema("public")
}

